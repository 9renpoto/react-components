{
  "name": "@9renpoto/style",
  "description": "simple components",
  "version": "0.0.1",
  "author": "@9renpoto",
  "bugs": {
    "url": "https://github.com/9renpoto/style/issues"
  },
  "dependencies": {
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "bulma": "^0.5.1",
    "react-calendar-heatmap": "^1.2.1",
    "react-fa": "^4.2.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-flowtype": "^0.5.0",
    "@9renpoto/eslint-config-react": "^0.2.0",
    "@9renpoto/stylelint-config": "^1.2.1",
    "@9renpoto/tslint-config": "^3.2.0",
    "@storybook/react": "^3.2.8",
    "@types/jest": "^20.0.8",
    "@types/react-test-renderer": "^15.5.4",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-flow-react-proptypes": "^5.1.1",
    "babel-plugin-flow-runtime": "^0.11.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "codecov": "^2.3.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-plugin-jest": "^20.0.3",
    "faker": "^4.1.0",
    "file-loader": "^1.0.0-rc.0",
    "flow-bin": "^0.53.1",
    "flow-runtime": "^0.14.0",
    "flow-typed": "^2.1.5",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-import": "^10.0.0",
    "prettier-eslint-cli": "^4.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "tslib": "^1.7.1",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^7.0.0",
    "webpack-node-externals": "^1.6.0"
  },
  "engine": {
    "node": ">= 5"
  },
  "files": [
    "lib/"
  ],
  "homepage": "https://9renpoto.github.io/style/",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true
  },
  "keywords": [
    "react",
    "styleguide"
  ],
  "license": "MIT",
  "lint-staged": {
    "{src,stories,__tests__}/**/*.{ts,tsx}": [
      "prettier --write --parser typescript",
      "tslint --fix",
      "git add"
    ],
    "stories/**/*.{js,jsx}": [
      "prettier-eslint --write",
      "eslint --cache",
      "git add"
    ],
    "src/**/*.css": [
      "stylefmt",
      "prettier --parser postcss",
      "stylelint",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/9renpoto/style.git"
  },
  "scripts": {
    "beta:lint": "run-p beta:lint:*",
    "beta:lint:ts": "eslint . --ext=ts,tsx -c .eslintrc.ts.js",
    "build": "run-p build:pre:*",
    "build:post:storybook": "build-storybook -o ./dist -s ./lib",
    "build:post:ts": "cross-env NODE_ENV=production webpack",
    "build:pre:assets": "cpx 'assets/**/*.{css,png,jpg}' lib",
    "build:pre:css": "postcss src/index.css -o lib/bundle.css",
    "build:pre:ts": "cross-env NODE_ENV=production tsc",
    "clean": "rimraf lib coverage dist",
    "coverage": "codecov -f ./coverage/lcov.info",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "run-p lint:*",
    "lint:flow": "flow",
    "lint:js": "eslint . --ext=js,jsx",
    "postbuild": "run-p build:post:*",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "start": "start-storybook -p 9001 -s ./lib",
    "test": "jest"
  },
  "style": "lib/bundle.css"
}
