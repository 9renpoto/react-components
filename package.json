{
  "name": "@9renpoto/style",
  "description": "simple components",
  "version": "0.0.3",
  "author": "@9renpoto",
  "bugs": {
    "url": "https://github.com/9renpoto/style/issues"
  },
  "dependencies": {
    "bulma": "^0.7.0",
    "classnames": "^2.2.5",
    "react-calendar-heatmap": "^1.6.1",
    "react-fa": "^5.0.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config": "4.4.0",
    "@9renpoto/eslint-config-react": "4.3.0",
    "@9renpoto/stylelint-config": "4.4.0",
    "@9renpoto/tslint-config": "4.0.0",
    "@storybook/addon-storyshots": "3.4.6",
    "@storybook/react": "3.4.6",
    "@types/classnames": "2.2.3",
    "@types/faker": "4.1.2",
    "@types/jest": "22.2.3",
    "@types/node": "9.6.18",
    "@types/react-calendar-heatmap": "1.6.1",
    "@types/storybook__react": "3.0.7",
    "awesome-typescript-loader": "4.0.1",
    "codecov": "3.0.2",
    "cpx": "1.5.0",
    "enzyme": "3.3.0",
    "eslint": "4.19.1",
    "eslint-plugin-jest": "21.15.3",
    "faker": "4.1.0",
    "file-loader": "1.1.11",
    "gh-pages": "1.1.0",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "7.1.2",
    "npm-run-all": "4.1.3",
    "postcss-cli": "5.0.0",
    "postcss-import": "11.1.0",
    "postcss-nested": "2.1.2",
    "prettier-eslint-cli": "4.7.1",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-test-renderer": "16.4.0",
    "rimraf": "2.6.2",
    "stylelint": "9.2.1",
    "ts-jest": "22.4.6",
    "tslib": "1.9.1",
    "tslint": "5.10.0",
    "tslint-react": "3.6.0",
    "typescript": "2.8.3",
    "typescript-eslint-parser": "15.0.0"
  },
  "files": [
    "lib/"
  ],
  "homepage": "https://9renpoto.github.io/style/",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupTestFrameworkScriptFile": "<rootDir>/setup.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "keywords": [
    "react",
    "styleguide"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write --parser typescript",
      "tslint --fix",
      "eslint --ext=ts,tsx",
      "git add"
    ],
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "src/**/*.css": [
      "prettier --parser postcss --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/9renpoto/style.git"
  },
  "scripts": {
    "assets": "cpx 'assets/**/*.{css,png,jpg}' lib",
    "build": "run-s clean tsc assets build:*",
    "build:css": "postcss src/index.css -o lib/bundle.css",
    "build:storybook": "build-storybook -o ./.storybook/build -s ./lib",
    "clean": "rimraf coverage .stoybook/build lib",
    "coverage": "codecov -f ./coverage/lcov.info",
    "deploy": "npm run build && gh-pages -d .storybook/build",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:ts": "tslint components/**/*.ts{,x}",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "prestart": "run-s clean build:css",
    "start": "start-storybook -p 9001 -s ./lib",
    "test": "jest",
    "tsc": "tsc"
  },
  "style": "lib/bundle.css",
  "types": "lib/index.d.ts"
}
