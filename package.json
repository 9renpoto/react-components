{
  "name": "@9renpoto/style",
  "description": "simple components",
  "version": "0.1.2",
  "author": "@9renpoto",
  "bugs": {
    "url": "https://github.com/9renpoto/style/issues"
  },
  "dependencies": {
    "bulma": "0.7.2",
    "classnames": "2.2.6",
    "react-calendar-heatmap": "1.8.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config": "4.7.0",
    "@9renpoto/eslint-config-react": "4.7.0",
    "@9renpoto/stylelint-config": "4.4.0",
    "@9renpoto/tslint-config": "4.7.0",
    "@storybook/addon-storyshots": "4.1.3",
    "@storybook/react": "4.1.3",
    "@types/classnames": "2.2.6",
    "@types/faker": "4.1.4",
    "@types/jest": "23.3.10",
    "@types/node": "10.12.18",
    "@types/react-calendar-heatmap": "1.6.2",
    "@types/storybook__addon-storyshots": "3.4.4",
    "@types/storybook__react": "4.0.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-require-context-hook": "1.0.0",
    "codecov": "3.1.0",
    "cpx": "1.5.0",
    "cssnano": "4.1.8",
    "enzyme": "3.8.0",
    "eslint": "5.10.0",
    "eslint-plugin-jest": "22.1.2",
    "faker": "4.1.0",
    "file-loader": "3.0.1",
    "gh-pages": "2.0.1",
    "husky": "1.3.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "npm-run-all": "4.1.5",
    "postcss-cli": "6.1.0",
    "postcss-import": "12.0.1",
    "postcss-nested": "2.1.2",
    "prettier-eslint-cli": "4.7.1",
    "prettier-stylelint": "0.4.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-test-renderer": "16.7.0",
    "rimraf": "2.6.2",
    "stylelint": "9.9.0",
    "svg-inline-loader": "0.8.0",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.0",
    "tslint-react": "3.6.0",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "21.0.2"
  },
  "files": [
    "lib/",
    "esm/"
  ],
  "homepage": "https://9renpoto.github.io/style/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "<rootDir>/setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "keywords": [
    "react",
    "styleguide"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "tslint --fix",
      "eslint --ext=ts,tsx",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.css": [
      "prettier-stylelint --write",
      "stylelint",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "module": "esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/9renpoto/style.git"
  },
  "scripts": {
    "assets": "cpx 'assets/**/*.{css,png,jpg}' lib",
    "build": "run-s clean build:* && npm run assets",
    "build:cjs": "tsc --module commonjs",
    "build:css": "postcss src/index.css -o lib/bundle.css",
    "build:esm": "tsc --module es2015 --outDir esm",
    "build:storybook": "build-storybook -o ./.storybook/build -s ./lib",
    "clean": "rimraf coverage .stoybook/build lib esm",
    "coverage": "codecov -f ./coverage/lcov.info",
    "deploy": "npm run build && gh-pages -d .storybook/build",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:ts": "tslint components/**/*.ts{,x}",
    "prepare": "npm run build",
    "prestart": "run-s clean build:css",
    "start": "start-storybook -p 9001 -s ./lib",
    "test": "jest",
    "tsc": "tsc"
  },
  "style": "lib/bundle.css",
  "types": "lib/index.d.ts"
}
