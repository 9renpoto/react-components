  "author": "@9renpoto",
  "bugs": {
    "url": "https://github.com/9renpoto/style/issues"
  },
  "dependencies": {
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rebass": "^0.3.4"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-flowtype": "latest",
    "@9renpoto/eslint-config-react": "latest",
    "@9renpoto/stylelint-config": "latest",
    "@storybook/react": "^3.0.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-flow-react-proptypes": "^3.2.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.5.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "browser-env": "^2.0.31",
    "codecov": "^2.2.0",
    "concurrently": "^3.4.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.0",
    "css-modules-require-hook": "^4.0.6",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "faker": "^4.1.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.48.0",
    "flow-typed": "^2.1.2",
    "husky": "^0.13.4",
    "images-require-hook": "^1.0.3",
    "lint-staged": "^3.6.0",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.0",
    "power-assert": "^1.4.3",
    "prettier-eslint": "^6.2.3",
    "react-addons-test-utils": "^15.5.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.10.1",
    "url-loader": "^0.5.8"
  },
  "engine": {
    "node": ">= 5"
  },
  "files": [
    "lib/"
  ],
  "homepage": "https://9renpoto.github.io/style/",
  "keywords": [
    "react",
    "styleguide"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "eslint --cache",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/9renpoto/style.git"
  },
  "scripts": {
    "build": "npm-run-all clean -p build:*",
    "build:js": "cross-env NODE_ENV=production babel src -d lib",
    "build:storybook": "build-storybook -o ./.out",
    "clean": "rimraf lib coverage",
    "coverage:unit": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "lint": "npm-run-all -p lint:*",
    "lint:flow": "flow",
    "lint:js": "eslint . --ext=js,jsx --cache",
    "postbuild": "cpx 'assets/**/*.{css,png,jpg}' lib",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "serve:storybook": "start-storybook -p 9001",
    "start": "concurrently --kill-others  \"npm run serve:storybook\"",
    "test": "npm-run-all -p test:*",
    "test:flow": "flow gen-flow-files src/ --out-dir lib",
    "test:lint": "npm run lint",
    "test:unit": "nyc mocha -- test"
  }
}
