{
  "name": "@9renpoto/style",
  "description": "simple components",
  "version": "0.0.3",
  "author": "@9renpoto",
  "bugs": {
    "url": "https://github.com/9renpoto/style/issues"
  },
  "dependencies": {
    "bulma": "0.7.2",
    "classnames": "2.2.6",
    "react-calendar-heatmap": "1.7.0",
    "react-fa": "5.0.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config": "4.6.0",
    "@9renpoto/eslint-config-react": "4.6.0",
    "@9renpoto/stylelint-config": "4.4.0",
    "@9renpoto/tslint-config": "4.6.0",
    "@storybook/addon-storyshots": "4.0.4",
    "@storybook/react": "4.0.4",
    "@types/classnames": "2.2.6",
    "@types/faker": "4.1.4",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.4",
    "@types/react-calendar-heatmap": "1.6.2",
    "@types/storybook__react": "4.0.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-require-context-hook": "1.0.0",
    "codecov": "3.1.0",
    "cpx": "1.5.0",
    "cssnano": "4.1.7",
    "enzyme": "3.7.0",
    "eslint": "5.8.0",
    "eslint-plugin-jest": "21.27.2",
    "faker": "4.1.0",
    "file-loader": "2.0.0",
    "gh-pages": "2.0.1",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "lint-staged": "8.0.4",
    "npm-run-all": "4.1.3",
    "postcss-cli": "6.0.1",
    "postcss-import": "12.0.1",
    "postcss-nested": "2.1.2",
    "prettier-eslint-cli": "4.7.1",
    "react": "16.6.1",
    "react-dom": "16.6.1",
    "react-test-renderer": "16.6.1",
    "rimraf": "2.6.2",
    "stylelint": "9.8.0",
    "svg-inline-loader": "0.8.0",
    "ts-jest": "23.10.4",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.6",
    "typescript-eslint-parser": "20.1.1"
  },
  "files": ["lib/"],
  "homepage": "https://9renpoto.github.io/style/",
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": ["<rootDir>/setup.js"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "collectCoverage": true
  },
  "keywords": ["react", "styleguide"],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": ["prettier-eslint --write", "git add"],
    "*.{ts,tsx}": [
      "prettier-eslint --write --parser typescript",
      "tslint --fix",
      "eslint --ext=ts,tsx",
      "git add"
    ],
    "*.{md,json}": ["prettier --parser --write", "git add"],
    "src/**/*.css": [
      "prettier --parser postcss --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/9renpoto/style.git"
  },
  "scripts": {
    "assets": "cpx 'assets/**/*.{css,png,jpg}' lib",
    "build": "run-s clean tsc assets build:*",
    "build:css": "postcss src/index.css -o lib/bundle.css",
    "build:storybook": "build-storybook -o ./.storybook/build -s ./lib",
    "clean": "rimraf coverage .stoybook/build lib",
    "coverage": "codecov -f ./coverage/lcov.info",
    "deploy": "npm run build && gh-pages -d .storybook/build",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:ts": "tslint components/**/*.ts{,x}",
    "prepublish": "npm run build",
    "prestart": "run-s clean build:css",
    "start": "start-storybook -p 9001 -s ./lib",
    "test": "jest",
    "tsc": "tsc"
  },
  "style": "lib/bundle.css",
  "types": "lib/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
